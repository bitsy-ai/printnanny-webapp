FROM python:3.9-slim-bullseye

ENV PYTHONUNBUFFERED 1
ENV PYTHONDONTWRITEBYTECODE 1

ENV JUPYTER_DATA_DIR /data
ENV JUPYTER_CONFIG_DIR /data

RUN apt-get update \
  # dependencies for building Python packages
  && apt-get install -y build-essential \
  # psycopg2 dependencies
  && apt-get install -y libpq-dev \
  # Translations dependencies
  && apt-get install -y gettext \
  # postgres client (dbshell)
  && apt-get install -y postgresql \
  # orca https://github.com/plotly/orca
  && apt-get install -y openssh-server \
  && apt-get -y install wget xvfb xauth poppler-utils \
  # cleaning up unused files
  && apt-get purge -y --auto-remove -o APT::AutoRemove::RecommendsImportant=false \
  && rm -rf /var/lib/apt/lists/*

# install nsc command-line tool
RUN wget https://github.com/nats-io/nsc/releases/download/2.7.1/nsc-linux-amd64.zip -O nsc-linux-amd64.zip
RUN unzip nsc-linux-amd64.zip -d /usr/local/bin


# Requirements are installed here to ensure they will be cached.
COPY ./requirements /requirements
# setuptools pin: https://github.com/pennersr/django-allauth/issues/3063
RUN pip install --upgrade pip setuptools==60.10.0 wheel
RUN pip install -r /requirements/local.txt
RUN pip install -r /requirements/test.txt

COPY ./compose/production/django/entrypoint /entrypoint
RUN sed -i 's/\r$//g' /entrypoint
RUN chmod +x /entrypoint

COPY ./compose/local/django/start /start
RUN sed -i 's/\r$//g' /start
RUN chmod +x /start

COPY ./compose/local/django/notebook /start-notebook
RUN sed -i 's/\r$//g' /start-notebook
RUN chmod +x /start-notebook

RUN mkdir /data
RUN mkdir -p /tmp/print_nanny_webapp
RUN chmod 777 /data
RUN echo "/app" > /usr/local/lib/python3.9/site-packages/print_nanny_webapp.pth
WORKDIR /app

ENTRYPOINT ["/entrypoint"]
