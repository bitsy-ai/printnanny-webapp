---
apiVersion: networking.gke.io/v1beta1
kind: FrontendConfig
metadata:
  namespace: {{ PRINTNANNY_NAMESPACE }}
  name: http-to-https
spec:
  redirectToHttps:
    enabled: true
    responseCodeName: MOVED_PERMANENTLY_DEFAULT
---
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  namespace: {{ PRINTNANNY_NAMESPACE }}
  name: printnanny-{{ PRINTNANNY_NAMESPACE }}
  annotations:
    kubernetes.io/tls-acme: "true"
    cert-manager.io/cluster-issuer: letsencrypt-dns-issuer
    certmanager.k8s.io/acme-challenge-type: "dns01"
    kubernetes.io/ingress.global-static-ip-name: "printnanny-static-ip--{{ PRINTNANNY_NAMESPACE }}"
    networking.gke.io/v1beta1.FrontendConfig: "http-to-https"
spec:
  tls:
  - hosts:
      {% if PRINTNANNY_NAMESPACE == 'live' %}
      - printnanny.ai
      - dl.printnanny.ai
      - download.printnanny.ai
      - api.printnanny.ai
      - www.printnanny.ai
      {% endif %}
      - {{ PRINTNANNY_NAMESPACE }}.printnanny.ai
      - janus.{{ PRINTNANNY_NAMESPACE }}.printnanny.ai
    secretName: printnanny-ai-tls
  {% if PRINTNANNY_NAMESPACE == 'live' %}
  - hosts:
      - print-nanny.com
      - www.print-nanny.com
    secretName: printnanny-com-tls
  {% endif %}
  rules:
    # live www and api
    {% if PRINTNANNY_NAMESPACE == 'live' %}
    - host: printnanny.ai
      http:
        paths:
          - path: /blog
            pathType: Prefix
            backend:
              service:
                name: printnanny-blog
                port:
                  number: 80
    - host: www.printnanny.ai
      http:
        paths:
          - path: /blog
            pathType: Prefix
            backend:
              service:
                name: printnanny-blog
                port:
                  number: 80
    - host: printnanny.ai
      http:
        paths:
          - path: /
            pathType: Prefix
            backend:
              service:
                name: django
                port:
                  number: 80
    - host: api.printnanny.ai
      http:
        paths:
          - path: /
            pathType: Prefix
            backend:
              service:
                name: django
                port:
                  number: 80
    - host: print-nanny.com
      http:
        paths:
          - path: /
            pathType: Prefix
            backend:
              service:
                name: django
                port:
                  number: 80
    - host: www.printnanny.ai
      http:
        paths:
          - path: /
            pathType: Prefix
            backend:
              service:
                name: django
                port:
                  number: 80
    - host: www.print-nanny.com
      http:
        paths:
          - path: /
            pathType: Prefix
            backend:
              service:
                name: django
                port:
                  number: 80
    - host: download.printnanny.ai
      http:
        paths:
          - path: /
            pathType: Prefix
            backend:
              service:
                name: nginx-gcsfuse
                port:
                  number: 80
    - host: dl.printnanny.ai
      http:
        paths:
          - path: /
            pathType: Prefix
            backend:
              service:
                name: nginx-gcsfuse
                port:
                  number: 80
    - host: metabase.printnanny.ai
      http:
        paths:
          - path: /
            pathType: Prefix
            backend:
              service:
                name: metabase
                port:
                  number: 80
    {% endif %}
    - host: {{ PRINTNANNY_NAMESPACE }}.printnanny.ai
      http:
        paths:
          - path: /
            pathType: Prefix
            backend:
              service:
                name: django
                port:
                  number: 80
    - host: www.{{ PRINTNANNY_NAMESPACE }}.printnanny.ai
      http:
        paths:
          - path: /
            pathType: Prefix
            backend:
              service:
                name: django
                port:
                  number: 80
    - host: janus.{{ PRINTNANNY_NAMESPACE }}.printnanny.ai
      http:
        paths:
          - path: /
            pathType: Prefix
            backend:
              service:
                name: janus-tcp
                port:
                  number: {{ JANUS_CLOUD_WS_PORT }}
          - path: /janus
            pathType: Prefix
            backend:
              service:
                name: janus-tcp
                port:
                  number: {{ JANUS_CLOUD_API_PORT }}
          - path: /admin
            pathType: Prefix
            backend:
              service:
                name: janus-tcp
                port:
                  number: {{ JANUS_CLOUD_ADMIN_PORT }}