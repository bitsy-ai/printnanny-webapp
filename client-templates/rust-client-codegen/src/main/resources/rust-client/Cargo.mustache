[package]
name = "{{{packageName}}}"
version = "{{{packageVersion}}}"
authors = ["Leigh Johnson <leigh@print-nanny.com>"]
homepage = "https://print-nanny.com"
repository = "https://github.com/bitsy-ai/octoprint-nanny-webapp"
license = "AGPL-3.0"
description = "Official Print Nanny Rust API Client"
edition = "2018"

[dependencies]
{{#deriveClapValueEnum}}
clap = { version = "^3.2", features = ["derive"] }
{{/deriveClapValueEnum}}
bytes = "1.1.0"
serde = "^1.0"
serde_derive = "^1.0"
serde_json = "^1.0"
url = "^2.2"
{{#hyper}}
hyper = "~0.11"
serde_yaml = "0.7"
base64 = "~0.7.0"
futures = "0.1.23"
{{/hyper}}
{{#reqwest}}
{{^supportAsync}}
reqwest = "~0.9"
{{/supportAsync}}
{{#supportAsync}}
infer = "0.3"
tokio = { version = "1.23", features = ["fs","macros", "rt-multi-thread"] }
tokio-util = { version = "0.7", features = ["codec"]}

[dependencies.reqwest]
version = "^0.11"
features = ["json", "multipart", "stream"]

{{/supportAsync}}
{{/reqwest}}

[dev-dependencies]
{{#hyper}}
tokio-core = "*"
{{/hyper}}
